<title>The Learning Network</title>	
<%= stylesheet_link_tag "mainskill", :media => "all" %>
<%= stylesheet_link_tag "signup", :media => "all" %>
<body>
<div id="wrapper">
<div id="sign">
<h1>Listing users</h1>
<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Mentor</th>
    <th>Admin</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><% if user.mentor == true %>Yes<% end %></td>
    <td><% if user.admin == true %>Yes<% end %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', '', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', '#' %>
</div>
</div>